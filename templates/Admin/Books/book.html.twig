{% extends 'Admin/Common/base.html.twig' %}

{% block content %}

<h1>Le livre</h1>

    <section class="booksection">
        <div class="bookdiv xLarge-8">
            <h2>{{ book.title }}</h2>
            <p class="resume">{{ book.resume }}</p>
            {% if book.author %}
                <p class="author"> {{ book.author.firstname }} {{ book.author.name }}</p>
            {% endif %}
            <p class="nbPages"> {{ book.nbPages }}</p>
            <div>
                <a class="update" href="{{ path('admin_update_book', {'id':book.id})  }}">Modifier</a>
                <a class="delete" href="{{ path('admin_delete_book', {'id':book.id})  }}">Supprimer</a>
            </div>
        </div>
    </section>



{% endblock %}