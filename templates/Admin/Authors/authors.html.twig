{% extends 'Admin/Common/base.html.twig' %}

{% block title %}
    Les auteurs
{% endblock %}

{% block body %}
    <main>
        <h1>Les auteurs</h1>

        <section class="search">
            <h3>Rechercher un auteur par le nom :</h3>
            <form name="search" action="{{ path('admin_author_search') }}" method="get">
                <input type="search" name="search" />
                <input type="submit" value="Rechercher" />
            </form>
        </section>

        <section class="sectionauthorslist xLarge-12">
            {% for author in authors %}
                <div class="authorslist xLarge-5">
                    <h2><a href="{{ path('admin_author', {'id':author.id}) }}">{{ author.firstname }}  {{ author.name }}</a></h2>
                    <p class="resume">{{ author.biography }}</p>
                    <p> {{ author.dateofbirth|date("d/m/Y") }}</p>
                    <div>
                        <a class="update" href="{{ path('admin_authors_update', {'id':author.id})  }}">Modifier l'auteur</a>
                        <a class="delete" href="{{ path('admin_authors_delete', {'id':author.id})  }}">Supprimer l'auteur</a>
                    </div>
                </div>
            {% endfor %}
        </section>
    </main>


{% endblock %}